<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="@string/back"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fill_out_questionnaire"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/lightBlue"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 1) Gender (single) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_gender_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_gender"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_gender_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioGroup
                        android:id="@+id/rg_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <RadioButton
                            android:id="@+id/rb_gender_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/opt_male"
                            android:tag="male"
                            android:buttonTint="@color/lightBlue"/>

                        <RadioButton
                            android:id="@+id/rb_gender_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/opt_female"
                            android:tag="female"
                            android:buttonTint="@color/lightBlue"/>
                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2) Gender Preference (single) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_gender_pref_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_gender_pref"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_gender_pref_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioGroup
                        android:id="@+id/rg_gender_pref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <RadioButton
                            android:id="@+id/rb_pref_men"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/opt_pref_men"
                            android:tag="men"
                            android:buttonTint="@color/lightBlue"/>

                        <RadioButton
                            android:id="@+id/rb_pref_women"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/opt_pref_women"
                            android:tag="women"
                            android:buttonTint="@color/lightBlue"/>

                        <RadioButton
                            android:id="@+id/rb_pref_none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/opt_no_preference"
                            android:tag="no_preference"
                            android:buttonTint="@color/lightBlue"/>
                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3) Availability (multi) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_availability_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_availability"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_availability_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioButton
                        android:id="@+id/rb_av_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/opt_morning"
                        android:tag="morning"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_av_afternoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_afternoon"
                        android:tag="afternoon"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_av_evening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_evening"
                        android:tag="evening"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_av_weekend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_weekend"
                        android:tag="weekend"
                        android:buttonTint="@color/lightBlue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4) Work Style (multi) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_work_style_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_work_style"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_work_style_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioButton
                        android:id="@+id/rb_style_individual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/opt_individual"
                        android:tag="individual"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_style_collaborative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_collaborative"
                        android:tag="collaborative"
                        android:buttonTint="@color/lightBlue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 5) Work Mode (multi) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_work_mode_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_work_mode"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_work_mode_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioButton
                        android:id="@+id/rb_mode_on_campus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/opt_on_campus"
                        android:tag="oncampus"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_mode_remote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_remote_zoom"
                        android:tag="remote"
                        android:buttonTint="@color/lightBlue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 6) Language (multi) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_language_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_language"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_language_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioButton
                        android:id="@+id/rb_lang_hebrew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/opt_hebrew"
                        android:tag="Hebrew"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_lang_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_english"
                        android:tag="English"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_lang_arabic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_arabic"
                        android:tag="Arabic"
                        android:buttonTint="@color/lightBlue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 7) Task Preference (multi) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/q_task_management"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tv_task_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"/>

                    <RadioButton
                        android:id="@+id/rb_task_fixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/opt_fixed_deadlines"
                        android:tag="fixed"
                        android:buttonTint="@color/lightBlue"/>

                    <RadioButton
                        android:id="@+id/rb_task_flexible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt_flexible_work"
                        android:tag="flexible"
                        android:buttonTint="@color/lightBlue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/save"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/lightBlue"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
